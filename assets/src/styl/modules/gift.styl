/*
 *  #gifts
 *  type : content element
 *
 *  It should have a monochrome contrast
 *  It should be bordered
 *  Its content should been spaced enough
 *
 */

#gifts
  .single-gift
    background #fefefe
    color #111
    border 1px solid white
    border-radius 2px
    box-shadow 0 0 5px #f7a85a
    min-height 5em
    margin 2.7em 0

    .giver-getter
      padding 0.4em
      width 10em
      margin 0 auto
      border-radius 3px
      color #1a1a1a
      text-align center

/*
 *  gift search
 *  type : content element
 *
 *
 */

#gift-src
  min-width 15em
  margin 1em 0

